<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11343c"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activities.CounterActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/matnDoa_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="55dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#FCB912"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_count"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/count"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/matnDoa_counter" />

        <TextView
            android:id="@+id/count_txt"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:gravity="center"
            android:text="0"
            android:textColor="#000"
            android:textSize="40sp"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/matnDoa_counter"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.25">

        <Button
            android:translationZ="1dp"
            android:id="@+id/count_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_doa"
            android:backgroundTint="#019486"
            android:gravity="center"
            android:text="+"
            android:textColor="#045249"
            android:textSize="35sp"
            app:layout_constraintBottom_toTopOf="@id/count_btn_r"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:backgroundTint="#E40537"
            android:background="@drawable/button_doa"
            android:id="@+id/count_btn_r"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="250dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="Reset"
            android:textColor="#4D0303"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/count_btn"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="329dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>